---
// src/pages/contributors.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ContributorCard from '../components/ContributorCard.astro';
import { contributors } from '../data/contributors.js';
---

<BaseLayout title="貢獻者 | vTaiwan">
  <div class="bg-black text-white py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">貢獻者</h1>
      <p class="text-xl max-w-3xl">
        vTaiwan 是一個開放的社群專案，由許多熱心的貢獻者共同協作完成。
        以下是部分主要貢獻者，感謝他們的付出與努力。
      </p>
    </div>
  </div>
  
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-5xl mx-auto">
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {contributors.map(contributor => (
          <ContributorCard 
            id={contributor.id}
            name={contributor.name}
            role={contributor.role}
            github={contributor.github}
            website={contributor.website}
            bio={contributor.bio}
          />
        ))}
      </div>
      

    </div>
  </main>
</BaseLayout>
