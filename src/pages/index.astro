---
import BaseLayout from '../layouts/BaseLayout.astro';
import IconWrapper from '../components/ui/IconWrapper.astro';

// 假設這些數據將來自 CMS
const featuredProjects = [
  {
    title: '數位身分證',
    description: '討論數位身分證的隱私與安全議題',
    status: 'active',
    icon: 'id-card',
    color: 'primary',
    url: '/projects/digital-id'
  },
  {
    title: '開放政府資料',
    description: '推動政府資料開放與應用',
    status: 'active',
    icon: 'database',
    color: 'teal',
    url: '/projects/open-data'
  },
  {
    title: '遠距醫療法規',
    description: '探討遠距醫療的法規與實施',
    status: 'completed',
    icon: 'stethoscope',
    color: 'amber',
    url: '/projects/telemedicine'
  }
];

const upcomingMeetups = [
  {
    title: '數位身分證線上諮詢會議',
    date: '2025-04-15',
    time: '19:00-21:00',
    location: '線上會議',
    url: '/meetups/digital-id-consultation'
  },
  {
    title: '開放政府資料工作坊',
    date: '2025-04-22',
    time: '14:00-17:00',
    location: '台北市社會創新實驗中心',
    url: '/meetups/open-data-workshop'
  }
];

const latestPosts = [
  {
    title: 'vTaiwan 平台更新：新增專案追蹤功能',
    date: '2025-03-20',
    excerpt: '為了讓公民更容易追蹤關注的議題，我們在平台上新增了專案追蹤功能...',
    url: '/blog/project-tracking-feature'
  },
  {
    title: '數位身分證諮詢會議摘要',
    date: '2025-03-15',
    excerpt: '本次會議邀請了資安專家、法律學者與公民團體代表，討論數位身分證的隱私保護措施...',
    url: '/blog/digital-id-meeting-summary'
  },
  {
    title: '如何參與 vTaiwan 的政策討論',
    date: '2025-03-10',
    excerpt: '想參與公共政策討論但不知從何開始？本文將介紹如何在 vTaiwan 平台上有效參與政策形成過程...',
    url: '/blog/how-to-participate'
  }
];
---

<BaseLayout title="vTaiwan - 台灣公共政策開放協作平台">
  <!-- Hero Section -->
  <section class="bg-black text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="text-democratic-red">開放</span>、<span class="text-jade-green">協作</span>、<span class="text-wheat-yellow">共創</span>
          <br>台灣的未來
        </h1>
        <p class="text-xl mb-8">vTaiwan 是一個促進政府與公民對話的開放協作平台，讓每個人都能參與公共政策的形成過程。</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/projects" class="btn-primary rounded-md">
            瀏覽專案
          </a>
          <a href="/about" class="btn-outline bg-transparent text-white border-white rounded-md">
            了解更多
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">
        <span class="title-underline">如何運作</span>
      </h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-democratic-red/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <IconWrapper name="message-circle" type="primary" size={32} />
          </div>
          <h3 class="text-xl font-bold mb-4">提出議題</h3>
          <p class="text-gray-700">任何人都可以提出值得討論的公共政策議題，經過初步審核後進入討論階段。</p>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-jade-green/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <IconWrapper name="users" type="teal" size={32} />
          </div>
          <h3 class="text-xl font-bold mb-4">開放討論</h3>
          <p class="text-gray-700">透過線上討論與實體會議，收集各方意見，形成具體的政策建議。</p>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-wheat-yellow/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <IconWrapper name="check-circle" type="amber" size={32} />
          </div>
          <h3 class="text-xl font-bold mb-4">政策形成</h3>
          <p class="text-gray-700">將公民共識轉化為具體政策建議，提交給相關政府部門參考與執行。</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">
          <span class="title-underline">熱門專案</span>
        </h2>
        <a href="/projects" class="text-democratic-red hover:text-democratic-red/80 flex items-center gap-1">
          <span>查看全部</span>
          <IconWrapper name="arrow-right" size={16} type="primary" />
        </a>
      </div>
      
      <div class="grid md:grid-cols-3 gap-6">
        {featuredProjects.map(project => (
          <a href={project.url} class="card p-6 hover:border-democratic-red transition">
            <div class="flex items-start mb-4">
              <div class={`w-12 h-12 rounded-full bg-${project.color === 'primary' ? 'democratic-red' : project.color === 'teal' ? 'jade-green' : 'wheat-yellow'}/10 flex items-center justify-center mr-4`}>
                <IconWrapper name={project.icon} type={project.color as 'primary' | 'teal' | 'amber' | 'default'} size={24} />
              </div>
              <div>
                <h3 class="font-bold text-lg">{project.title}</h3>
                <div class="flex items-center mt-1">
                  <span class={`inline-block w-2 h-2 rounded-full ${project.status === 'active' ? 'bg-jade-green' : 'bg-gray-400'} mr-2`}></span>
                  <span class="text-sm text-gray-600">{project.status === 'active' ? '進行中' : '已完成'}</span>
                </div>
              </div>
            </div>
            <p class="text-gray-700">{project.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Upcoming Meetups -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">
          <span class="title-underline">即將舉行的會議</span>
        </h2>
        <a href="/meetups" class="text-democratic-red hover:text-democratic-red/80 flex items-center gap-1">
          <span>查看全部</span>
          <IconWrapper name="arrow-right" size={16} type="primary" />
        </a>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        {upcomingMeetups.map(meetup => (
          <a href={meetup.url} class="card p-6 hover:border-jade-green transition">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-jade-green/10 rounded-full flex items-center justify-center mr-4">
                <IconWrapper name="calendar" type="teal" size={24} />
              </div>
              <h3 class="font-bold text-lg">{meetup.title}</h3>
            </div>
            <div class="flex flex-wrap gap-4 text-sm text-gray-700">
              <div class="flex items-center gap-1">
                <IconWrapper name="calendar" size={16} />
                <span>{meetup.date}</span>
              </div>
              <div class="flex items-center gap-1">
                <IconWrapper name="clock" size={16} />
                <span>{meetup.time}</span>
              </div>
              <div class="flex items-center gap-1">
                <IconWrapper name="map-pin" size={16} />
                <span>{meetup.location}</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">
          <span class="title-underline">最新文章</span>
        </h2>
        <a href="/blog" class="text-democratic-red hover:text-democratic-red/80 flex items-center gap-1">
          <span>查看全部</span>
          <IconWrapper name="arrow-right" size={16} type="primary" />
        </a>
      </div>
      
      <div class="grid md:grid-cols-3 gap-6">
        {latestPosts.map(post => (
          <a href={post.url} class="card hover:border-wheat-yellow transition">
            <div class="p-6">
              <h3 class="font-bold text-lg mb-2">{post.title}</h3>
              <p class="text-gray-500 text-sm mb-3">{post.date}</p>
              <p class="text-gray-700">{post.excerpt}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-black text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">加入我們，共同參與台灣的未來</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">無論您是公民、專家、政府人員或是關心公共事務的任何人，都歡迎加入 vTaiwan 平台，貢獻您的想法。</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/projects" class="btn-primary rounded-md">
          瀏覽專案
        </a>
        <a href="/about" class="btn-outline bg-transparent text-white border-white rounded-md">
          了解更多
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
