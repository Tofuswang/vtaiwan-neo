---
// src/pages/admin/index.astro
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>vTaiwan 內容管理系統</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@400;500;700&display=swap">
    <style>
      body {
        font-family: 'Noto Serif TC', serif;
      }
      .login-btn {
        background-color: #D80000;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
      }
      .login-btn:hover {
        background-color: #b00000;
      }
    </style>
  </head>
  <body>
    <!-- 將加載 Decap CMS -->
    <script src="https://unpkg.com/decap-cms@3.6.2/dist/decap-cms.js"></script>
    <script>
      // 自定義預覽樣式
      CMS.registerPreviewStyle("/assets/css/preview.css");
      
      // 自定義顏色選擇器
      const colorControl = createClass({
        render: function() {
          const {value, onChange} = this.props;
          return h('div', {}, [
            h('select', {
              value: value || 'primary',
              onChange: e => onChange(e.target.value)
            }, [
              h('option', {value: 'primary'}, '民主紅 (Primary)'),
              h('option', {value: 'teal'}, '翠玉青 (Teal)'),
              h('option', {value: 'amber'}, '稻穗黃 (Amber)')
            ])
          ]);
        }
      });
      
      CMS.registerWidget('color-picker', colorControl);
    </script>
  </body>
</html>
